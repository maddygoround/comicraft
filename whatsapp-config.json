{
  "name": "ComicGenius",
  "description": "AI-powered comic creator that transforms your stories into amazing visual comics",
  "version": "1.0.0",
  "whatsapp": {
    "webhook": {
      "enabled": false,
      "url": "/api/webhook/whatsapp",
      "verify_token": "comicgenius_verify_token"
    },
    "features": {
      "story_input": true,
      "character_tagging": true,
      "style_selection": true,
      "comic_generation": true,
      "mobile_optimized": true
    },
    "ui": {
      "mobile_first": true,
      "responsive_breakpoints": {
        "mobile": "320px",
        "tablet": "768px",
        "desktop": "1024px"
      },
      "touch_friendly": true,
      "gesture_support": true
    },
    "sharing": {
      "whatsapp_share": true,
      "image_export": true,
      "comic_download": true
    }
  },
  "deployment": {
    "platform": "vercel",
    "domain": "comicgenius.vercel.app",
    "ssl": true,
    "cdn": true
  },
  "api": {
    "gemini": {
      "model": "gemini-2.5-flash",
      "image_model": "gemini-2.5-flash-image",
      "rate_limit": "5_requests_per_minute"
    }
  }
}
